# ==============================================================================
# DataRoom VDR - Production Environment Variables
# Version: 2.0.0
# ==============================================================================
# Copy this file to .env.production and fill in your values
# Generate secrets with: openssl rand -base64 32
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=dataroom

# ------------------------------------------------------------------------------
# Authentication
# ------------------------------------------------------------------------------
NEXTAUTH_URL=https://www.simplevdr.com
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE
AUTH_SECRET=YOUR_AUTH_SECRET_HERE

# ------------------------------------------------------------------------------
# Redis Cache
# ------------------------------------------------------------------------------
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE

# ------------------------------------------------------------------------------
# Storage Configuration (S3 Compatible)
# ------------------------------------------------------------------------------
# For AWS S3:
#   AWS_REGION=eu-west-1
#   AWS_ENDPOINT= (leave empty for AWS)
#
# For MinIO (local development):
#   AWS_REGION=us-east-1
#   AWS_ENDPOINT=http://minio:9000
#   NEXT_PUBLIC_STORAGE_URL=http://localhost:9100
#
# For Aruba Cloud Object Storage:
#   AWS_REGION=r1-it
#   AWS_ENDPOINT=https://r1-it.storage.cloud.it
#   NEXT_PUBLIC_STORAGE_URL=https://r1-it.storage.cloud.it

STORAGE_PROVIDER=s3
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=dataroom-production
AWS_ENDPOINT=
NEXT_PUBLIC_STORAGE_URL=

# ------------------------------------------------------------------------------
# Email Configuration (Optional)
# ------------------------------------------------------------------------------
# Supported providers: smtp, resend, ses
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASSWORD=your_smtp_password
# EMAIL_FROM=noreply@simplevdr.com

# ------------------------------------------------------------------------------
# Monitoring (Optional)
# ------------------------------------------------------------------------------
SENTRY_DSN=

# ------------------------------------------------------------------------------
# Security (Optional)
# ------------------------------------------------------------------------------
CLAMAV_ENABLED=false
VIRUSTOTAL_API_KEY=
